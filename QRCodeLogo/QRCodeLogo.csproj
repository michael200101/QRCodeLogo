<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    <BaseOutputPath>C:\Users\mjanzen\source\repos\QRCodeLogo\QRCodeLogo\OutputProgram</BaseOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="QRCoder" Version="1.7.0" />
  </ItemGroup>


	<ItemGroup>
		<MyFolderFiles Include="Logo\**\*" />
		<MyOtherFolderFiles Include="QR\**\*" />
	</ItemGroup>


	<ItemGroup>
	  <None Include="OutputProgram\Debug\net9.0-windows\Logo\logo.png" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCodeLogo.deps.json" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCodeLogo.dll" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCodeLogo.exe" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCodeLogo.pdb" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCodeLogo.runtimeconfig.json" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QRCoder.dll" />
	  <None Include="OutputProgram\Debug\net9.0-windows\QR\qr.png" />
	</ItemGroup>

	<Target Name="CopyCustomFolders" AfterTargets="Build">
		<Copy SourceFiles="@(MyFolderFiles)" DestinationFolder="$(OutputPath)Logo\" />
		<Copy SourceFiles="@(MyOtherFolderFiles)" DestinationFolder="$(OutputPath)QR\" />
	</Target>




</Project>
