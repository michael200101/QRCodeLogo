<Window x:Class="QRCodeLogo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCodeLogo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Click="Button_Click" Content="QR-Code generieren" FontSize="20" FontWeight="Bold"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Logo ändern" Click="Button_Click_1" Margin="3"/>
            <Button Content="QR-Ordner öffnen" Click="Button_Click_2" Grid.Column="1" Margin="3"/>
        </Grid>

        <Image x:Name="Output" Grid.Row="1" Grid.Column="1" Source="/QR/qr.png"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Alles was hier steht wird zum QR Code" HorizontalContentAlignment="Center"/>
            <RadioButton Grid.Row="1" GroupName="1" Content="Normal" Checked="Normal_Checked" />
            <RadioButton Grid.Row="2" GroupName="1" Content="Contact" Checked="Normal_Checked"/>
            <RadioButton Grid.Row="3" GroupName="1" Content="Wi-Fi" Checked="Normal_Checked"/>
            
            
            <Border BorderThickness="2" BorderBrush="Black" Grid.Row="4" >
                <TextBox TextWrapping="Wrap" MaxLines="30" MaxLength="1273" x:Name="Input" Grid.Row="2" Grid.Column="0" TextChanged="Input_TextChanged"/>
            </Border>
            <StackPanel x:Name="Contact" Grid.Row="4" Visibility="Hidden">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Vorname"/>
                    <TextBox Grid.Column="1" x:Name="TextVorname"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Nachname"/>
                    <TextBox Grid.Column="1" x:Name="TextNachname"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Telefonnummer Mobil"/>
                    <TextBox Grid.Column="1" x:Name="TextTelefonnummer"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Telefonnummer Festnetz"/>
                    <TextBox Grid.Column="1" x:Name="TextTelefonnummerFest"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="E-Mail"/>
                    <TextBox Grid.Column="1" x:Name="TextEMail"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Firma"/>
                    <TextBox Grid.Column="1" x:Name="TextFirma"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Titel"/>
                    <TextBox Grid.Column="1" x:Name="TextTitel"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Straße"/>
                    <TextBox Grid.Column="1" x:Name="TextStraße"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Stadt"/>
                    <TextBox Grid.Column="1" x:Name="TextStadt"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="PLZ"/>
                    <TextBox Grid.Column="1" x:Name="TextPLZ"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Land"/>
                    <TextBox Grid.Column="1" x:Name="TextLand"/>
                </Grid>
            </StackPanel>
            <StackPanel x:Name="Wifi" Grid.Row="4" Visibility="Hidden">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Sicherheit"/>
                    <RadioButton Grid.Column="2" GroupName="2" Content="WEP" Checked="RadioButton_Checked" VerticalAlignment="Center"/>
                    <RadioButton Grid.Column="1" GroupName="2" Content="WPA/WPA2/WPA3" Checked="RadioButton_Checked" VerticalAlignment="Center"/>
                    <RadioButton Grid.Column="3" GroupName="2" Content="None" Checked="RadioButton_Checked" VerticalAlignment="Center"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="SSID"/>
                    <TextBox Grid.Column="1" x:Name="SSID"/>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Passwort"/>
                    <TextBox Grid.Column="1" x:Name="Passwort"/>
                </Grid>
            </StackPanel>
            

        </Grid>
    </Grid>
</Window>
